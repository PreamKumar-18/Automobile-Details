@model Brand

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-uppercase">Create Brand</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1">
            <form method="post" enctype="multipart/form-data">
                 <div class="mb-3">
                     <label asp-for="@Model.Name" class="form-label"></label>
                     <input asp-for="@Model.Name" class="form-control" />
                     <span asp-validation-for="@Model.Name" class="text-danger"></span>
                 </div>
                  <div class="mb-3">
                     <label asp-for="@Model.EstablishedYear" class="form-label"></label>
                     <input asp-for="@Model.EstablishedYear" class="form-control" />
                     <span asp-validation-for="@Model.EstablishedYear" class="text-danger"></span>
                 </div>
                  <div class="mb-3">
                     <label asp-for="@Model.BrandLogo" class="form-label"></label>
                     <input type="file" name="files" id="uploadbox" class="form-control" />
                 </div>
                  <div class="mb-3">
                     <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
                     <button type="submit" class="btn btn-success">Create</button>
                 </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptspartial" />
}